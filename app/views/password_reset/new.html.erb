
<% provide(:title, 'Forgot password') %>

<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h2>Forgot password</h2>

      <%= form_for(:password_reset, url: password_reset_path) do |f| %>

        <div class='form-group'>
          <%= f.label :email, 'Email' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <%= f.submit "Submit", class: 'btn btn-secondary' %>

      <% end %>
    </div>
  </div>
</div>
