<% if flash[:success] %>
  <% flash.each do |key, value| %>
    <div class="alert alert-dismissible alert-info <%= key %>"><%= value %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  <% end %>

<% elsif flash[:danger] %>
  <% flash.each do |key, value| %>
    <div class="alert alert-dismissible alert-warning <%= key %>"><%= value %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  <% end %>

<% elsif flash[:primary] %>
  <% flash.each do |key, value| %>
    <div class="alert alert-dismissible alert-dark <%= key %>"><%= value %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  <% end %>
<% end %>
